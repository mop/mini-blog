<% p @comment %>
$('comment_<%= @comment.id %>').update('<%= escape_js(partial 'comment_edit', :format => :html, :comment => @comment).split("\n").join('') %>');
$('comment_<%= @comment.id %>').select('h3')[0].hide();
var form = $$('#comment_<%= @comment.id %> form')[0];
var button = $$('#comment_<%= @comment.id %> button')[0];

form.onsubmit = function() {
  new Ajax.Request(form.getAttribute('action') + '.js', {
    method: 'post',
    parameters: Form.serialize(this),
    evalScripts: true,
    asynchronous: true
  });
  return false;
}

